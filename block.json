{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 3,
    "name": "time-greeting-block/time-greeting",
    "version": "1.2",
    "title": "Time Greeting",
    "category": "widgets",
    "icon": "clock",
    "description": "Display time-based greetings and current date with customizable periods.",
    "keywords": ["time", "greeting", "date", "clock", "calendar"],
    "textdomain": "time-greeting-block",
    "supports": {
        "html": false,
        "customClassName": true,
        "className": true,
        "align": ["left", "center", "right", "wide", "full"],
        "spacing": {
            "margin": true,
            "padding": true
        },
        "typography": {
            "fontSize": true,
            "lineHeight": true
        },
        "color": {
            "text": true,
            "background": true,
            "gradients": true
        }
    },
    "attributes": {
        "display": {
            "type": "string",
            "default": "greeting",
            "enum": ["greeting", "date", "both"]
        },
        "dateFormat": {
            "type": "string",
            "default": "F j, Y"
        },
        "timezone": {
            "type": "string",
            "default": ""
        },
        "tzAbbr": {
            "type": "string",
            "default": ""
        },
        "align": {
            "type": "string"
        }
    },
    "editorScript": "file:./assets/block-editor.js",
    "editorStyle": "file:./assets/block-editor.css",
    "style": "file:./assets/block-style.css"
}